# Environment variables
DEBUG=True
SECRET_KEY=django-insecure-your-secret-key-change-this-in-production
DATABASE_URL=mysql://root:root@2001@localhost:3306/kannammal_agro

# MySQL Database Configuration
DB_NAME=kannammal_agro
DB_USER=root
DB_PASSWORD=root@2001
DB_HOST=localhost
DB_PORT=3306

# Internationalization
DEFAULT_LANGUAGE=en
TIME_ZONE=Asia/Kolkata

# Feature Flags
FEATURE_VOICE_INPUT=True
FEATURE_RANKING=True

# Ranking Configuration
RANKING_WEIGHTS=price:0.4,consistency:0.25,reliability:0.25,fill:0.1
PRICE_CUTOFF_HOUR=9

# STT Provider Keys (Optional)
# AZURE_SPEECH_KEY=your_azure_speech_key
# AZURE_SPEECH_REGION=your_azure_region
# GOOGLE_CLOUD_KEY_PATH=path/to/google-cloud-credentials.json

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Email Configuration (for notifications)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# SMS/WhatsApp Configuration (Optional)
# TWILIO_ACCOUNT_SID=your_twilio_sid
# TWILIO_AUTH_TOKEN=your_twilio_token
# TWILIO_PHONE_NUMBER=your_twilio_number

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Static/Media Files
STATIC_ROOT=staticfiles
MEDIA_ROOT=media
